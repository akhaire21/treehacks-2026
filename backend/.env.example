# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096

# Jina AI Configuration
JINA_API_KEY=your_jina_api_key_here
JINA_MODEL=jina-embeddings-v3
JINA_EMBEDDING_DIM=1024

# Elasticsearch Configuration
# Option 1: Elastic Cloud (Recommended) - Use Cloud ID + API Key
ELASTIC_CLOUD_ID=cloud_id
ELASTIC_API_KEY=key
ELASTIC_INDEX_NAME=workflows

# Option 2: Self-Hosted Elasticsearch - Use Host + Basic Auth (comment out Option 1)
# ELASTICSEARCH_HOST=http://localhost:9200
# ELASTICSEARCH_INDEX=workflow_marketplace
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your_password

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Search Algorithm Parameters
SCORE_THRESHOLD_GOOD=0.85
SCORE_IMPROVEMENT_EPSILON=0.1
MAX_RECURSION_DEPTH=2
SUBTASKS_MIN=2
SUBTASKS_MAX=8
